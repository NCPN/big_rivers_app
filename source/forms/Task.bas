    If Len(tbxTask.Text) > Me.MaxCount Then
        Me.lblMaxCount.Caption = -(Me.MaxCount - Len(tbxTask.Text)) & " over"
    End If
    
        If CurrentCount < 1 Then 'CInt(Me.MaxCount) Then
        Me.MaxCountFontColor = vbRed
